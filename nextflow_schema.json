        },
        {
            "$ref": "#/definitions/max_job_request_options"
        },
        {
            "$ref": "#/definitions/generic_options"
        }
    ],
    "properties": {
        "read1_adapter": {
            "type": "string",
            "description": "For trimming read1.",
            "default": "AGATCGGAAGAGC"
        },
        "read2_adapter": {
            "type": "string",
            "description": "For trimming read2.",
            "default": "AGATCGGAAGAGC"
        },
        "filter": {
            "type": "string",
            "description": "Algorithm for filtering bam file. Choose from 'false', 'both', 'improper'",
            "default": "both"
        },
        "barcode_regex": {
            "type": "string",
            "description": "Regular expression used to detect barcodes, used for SPLIT_BAM.",
            "default": "[^:]*",
            "hidden": true
        },
        "archr_thread": {
            "type": "integer",
            "description": "Number of threads used for ArchR.",
            "default": 4
