            "hidden": true
        },
        "pairwise_test_clusters2_1": {
            "type": "string",
            "hidden": true
        },
        "pairwise_test_clusters2_2": {
            "type": "string",
            "hidden": true
        },
        "custom_peaks": {
            "type": "string",
            "hidden": true
        },
        "trajectory_groups": {
            "type": "string",
            "hidden": true
        }
    }
}
